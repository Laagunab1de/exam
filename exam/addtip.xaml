<Window x:Class="exam.addtip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam"
        mc:Ignorable="d"
        Title="addtip" Height="450" Width="800">
    
    <StackPanel>
        <TextBlock Height="50" Width="200">name</TextBlock>
        <TextBox Height="50" Width="200" x:Name="name"></TextBox>
        <TextBlock Height="50" Width="200">surname</TextBlock>
        <TextBox Height="50" Width="200" x:Name="surname"></TextBox>
        <TextBlock Height="50" Width="200">login</TextBlock>
        <TextBox Height="50" Width="200" x:Name="login"></TextBox>
        <Button Height="50" Width="200" Click="Button_Click" >Add</Button>
    </StackPanel>
</Window>
